<% if post.comments_count > 3 %>
  <%= link_to "View all #{post.comments_count} comments", post, 
      class: 'text-gray-500 text-sm hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300' %>
<% elsif post.comments_count > 0 && post.comments_count <= 3 %>
  <!-- Show nothing here as we're displaying all comments inline -->
<% else %>
  <!-- No comments yet -->
<% end %>