<div class="min-h-screen flex items-center justify-center px-4 py-8">
  <div class="w-full max-w-lg backdrop-blur-md rounded-2xl shadow-xl p-6 sm:p-8 border border-gray-200 dark:border-gray-700 transition-all">

    <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-6 text-center">Create a New Post</h2>

    <%= form_for @post, html: { multipart: true } do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation" class="bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-200 px-4 py-3 rounded-md mb-4 shadow-sm">
          <h3 class="font-semibold mb-1">
            <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
          </h3>
          <ul class="list-disc ml-6 text-sm space-y-1">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <% f.label :image, "Upload Image", class: "block text-sm font-medium mb-1" %>
        <%= f.file_field :image, class: "block w-full text-sm dark:text:white file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:bg-purple-100 file:text-purple-700 dark:file:bg-purple-900 dark:file:text-purple-200 hover:file:bg-purple-200 dark:hover:file:bg-purple-800 transition-all" %>
      </div>

      <div class="mb-4">
        <% f.label :description, "Description", class: "block text-sm font-medium t mb-1" %>
        <%= f.text_area :description, placeholder: "Add your description", rows: 4,
            class: "block w-full px-4 py-2 border border-gray-300 dark:border-gray-700 placeholder-gray-500 dark:placeholder-gray-400 text-black dark:text-white rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm transition-all backdrop-blur" %>
      </div>

      <div class="text-center">
        <%= f.submit "Post", class: "inline-block w-full sm:w-auto px-4 py-2.5 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-medium rounded-md shadow transition-all" %>
        <% if @post.persisted? %>
          <%= link_to "Show this post", @post, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        <% else %>
          <%= link_to "Back to dashboard", root_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
