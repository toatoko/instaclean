<div class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-sm text-white">
     <!-- Logo and Header Section -->
      <div class="text-center floating-animation mb-5">
        <img
            class="mx-auto h-25 w-auto drop-shadow-2xl"
            src="https://www.evmux.com/blog/wp-content/uploads/2023/12/instagram-copy-e1702584672389.png"
            alt="Instagram"/>
      </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-4">
              <%= f.label :avatar, class:"sr-only" %>
              <%= f.file_field :avatar, class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-purple-50 file:text-purple-700 hover:file:bg-purple-100" %>
            </div>
            <div class="mb-6">
              <%= f.text_field :first_name, autofocus: true, placeholder:"First Name", autocorrect: "off", autocapitalize: "off",
                class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
            </div>

            <div class="mb-6">
              <%= f.label :last_name, class:"sr-only" %>
              <%= f.text_field :last_name, placeholder:"Last Name" ,
              class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-xl focus:outline-none rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
            </div>
            <div class="mb-6">
              <%= f.label :username, class:"sr-only" %>
              <%= f.text_field :username, placeholder:"Username" ,
              class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 rounded-xl focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
            </div>
            <div class="mb-6">
              <%= f.label :email, class:"sr-only" %>
              <%= f.email_field :email, autocomplete: "email", placeholder:"Email address" ,
              class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 rounded-xl focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
            </div>

            <div class="mb-6">
              <%= f.label :password, class:"sr-only" %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password (6 Character minimum)", 
                  class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 rounded-xl focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
            </div>

            <div class="mb-6">
              <%= f.label :password_confirmation, class:"sr-only" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Password (must match your password)", 
                class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-xl focus:outline-none rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
            </div>
            <div class="mb-6">
              <%= f.submit "Sign up", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded transition-colors"  %>
            </div>
            <div class="text-center">
              <span class="text-gray-400 text-sm">have an account? </span>
              <%= link_to "Log in", new_user_session_path,
                class: "text-blue-600 hover:text-blue-700 text-sm transition-colors" %>
            </div>
            <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
